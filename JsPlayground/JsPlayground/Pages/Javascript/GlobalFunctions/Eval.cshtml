    </div>
</div>

<pre>
<code>
function EvalTest()
{
    // test 1
    let x = 10;
    let y = 20;
    let a = eval("x * y") + "&lt;br>"; //200
    let b = eval("2 + 2") + "&lt;br>"; // 4
    let c = eval("x + 17") + "&lt;br>"; //27
    let output = a + b + c; // output was html of all three lines
    document.getElementById("DemoContainer").innerHTML = output;

