@page

@model JsPlayground.Pages.Javascript.Strings.ToUpperCaseToLowerCaseModel

@{
    string pageId = "ToUpperCase / ToLowerCase";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@{
    ViewData["Title"] = pageId;
}

@section LibraryHeader {JavaScript}
@section BreadCrumbLibrary {javascript}
@section BreadCrumbAnchor {js-strings}
@section BreadCrumbChapter {strings}
@section BreadCrumbPageName {@pageId.ToLower()}
@section PageName {@pageId}

<p>To convert a string to uppercase or lowercase, use <code>toUpperCase()</code> and <code>toLowerCase()</code>.</p>

<pre>
<code>
let name = "Hello World";
demo1 = document.getElementById("demo1");
demo1.innerHTML = `${name.toUpperCase()} : ${name.toLowerCase()}`;
</code>
</pre>

<div class="card text-white bg-info mt-5">
    <div class="card-body">
        <div id="demo1"></div>
    </div>
</div>

<p>&nbsp;</p>


<p>&nbsp;</p>

<p>&nbsp;</p>


@section Scripts
{
    <script>
        let name = "Hello World";
        demo1 = document.getElementById("demo1");
        demo1.innerHTML = `${name.toUpperCase()} : ${name.toLowerCase()}`;
    </script>
}
